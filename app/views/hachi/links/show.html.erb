<h1 class='page-header'><%= "#{@link.method} #{@link.path}" %></h1>
<p><%= @link.description %></p>
<div>
  <div class='api-tester'>
    <%= react_component('ApiTester', { path: @link.path, schema: @link.schema ? schema_to_hash(@link.schema.data.dup) : {} , headers: Hachi::Config.headers }) %>
  </div>
  <%= render 'response', link: @link %>
</div>

